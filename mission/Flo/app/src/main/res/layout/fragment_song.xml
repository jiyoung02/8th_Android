<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/layout_mix"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="내 취향 MIX"
            android:textColor="@color/black"
            android:textSize="14sp"/>
        <ImageView
            android:id="@+id/btn_mix_toggle"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:src="@drawable/btn_toggle_off"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_select_all"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:orientation="horizontal"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/layout_mix"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_playlist_select_off"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="전체선택"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_listen_all"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:orientation="horizontal"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/layout_mix"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_player_play"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="전체듣기"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:gravity="center"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_songs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:listitem="@layout/item_rv_song"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/layout_listen_all" />
</androidx.constraintlayout.widget.ConstraintLayout>