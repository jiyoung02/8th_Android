<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_first_album_default"
    android:padding="18dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/tv_home_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="포근하게 덮어주는 봄의\n목소리"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
        android:id="@+id/btn_paly"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/btn_panel_play_large"
        app:layout_constraintTop_toBottomOf="@id/tv_home_title"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_total_song_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="총 20곡"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:layout_marginBottom="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/iv_song_image1"/>
    <TextView
        android:id="@+id/tv_date_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2020.12.16"
        android:textSize="12sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/tv_total_song_num"
        app:layout_constraintBottom_toBottomOf="@id/tv_total_song_num"
        app:layout_constraintStart_toEndOf="@id/iv_song_image1"/>

    <ImageView
        android:id="@+id/iv_song_image1"
        android:layout_width="54dp"
        android:layout_height="58dp"
        android:src="@drawable/img_album_exp"
        android:padding="6dp"
        app:layout_constraintBottom_toTopOf="@id/iv_song_image2"
        app:layout_constraintStart_toStartOf="parent" />
    <LinearLayout
        android:id="@+id/layout_song_info1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/iv_song_image1"
        app:layout_constraintTop_toTopOf="@id/iv_song_image1"
        app:layout_constraintBottom_toBottomOf="@id/iv_song_image1">
        <TextView
            android:id="@+id/tv_song_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="song1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/tv_song_singer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="singer1"
            android:textSize="12sp"
            android:textColor="@color/white"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_song_image2"
        android:layout_width="54dp"
        android:layout_height="58dp"
        android:src="@drawable/img_album_exp"
        android:padding="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <LinearLayout
        android:id="@+id/layout_song_info2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/iv_song_image2"
        app:layout_constraintTop_toTopOf="@id/iv_song_image2"
        app:layout_constraintBottom_toBottomOf="@id/iv_song_image2">
        <TextView
            android:id="@+id/tv_song_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="song2"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/tv_song_singer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="singer2"
            android:textSize="12sp"
            android:textColor="@color/white"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>