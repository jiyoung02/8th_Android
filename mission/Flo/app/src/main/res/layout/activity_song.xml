<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingHorizontal="20dp"
    android:paddingVertical="4dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/iv_setting"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/btn_player_setting"/>
        <ImageView
            android:id="@+id/iv_eq"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/btn_player_eq_off"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/nugu_btn_down"/>

    </LinearLayout>
    <ImageView
        android:id="@+id/iv_more"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/btn_player_more"
        app:layout_constraintTop_toBottomOf="@id/layout_top"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/tv_song_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="song_title"
        android:textSize="20sp"
        android:textAppearance="@style/TextAppearance.App.Bold.Black"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@id/layout_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/tv_song_singer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="singer"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_song_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
        android:id="@+id/iv_song_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/img_album_exp2"
        android:layout_marginTop="20dp"
        app:layout_constraintWidth_percent="0.75"
        app:layout_constraintHeight_percent="0.4"
        app:layout_constraintTop_toBottomOf="@id/tv_song_singer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/tv_lyrics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내리는 꽃가루에 \n눈이 따끔해 아야"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginVertical="16dp"
        app:layout_constraintTop_toBottomOf="@id/iv_song_image"
        app:layout_constraintBottom_toTopOf="@id/layout_preference"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/layout_preference"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tv_lyrics"
        app:layout_constraintBottom_toTopOf="@id/playing_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    <ImageView
        android:id="@+id/iv_like"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/ic_my_like_off" />
    <ImageView
        android:id="@+id/iv_unlike"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/btn_player_unlike_off"/>
    </LinearLayout>
    
    <View
        android:id="@+id/playing_bar"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray_color"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/layout_preference"
        app:layout_constraintBottom_toTopOf="@id/layout_controller"/>
    <TextView
        android:id="@+id/tv_start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0:00"
        android:textColor="@color/select_color"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/playing_bar"
        app:layout_constraintStart_toStartOf="@id/playing_bar"/>
    <TextView
        android:id="@+id/tv_end_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3:00"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/playing_bar"
        app:layout_constraintEnd_toEndOf="@id/playing_bar"/>
    
    <LinearLayout
        android:id="@+id/layout_controller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@id/iv_related_song"
        app:layout_constraintTop_toBottomOf="st">
        <ImageView
            android:id="@+id/iv_controller_repeat"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/nugu_btn_repeat_inactive"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/iv_controller_prev"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="2dp"
            android:src="@drawable/nugu_btn_skip_previous_32"/>
        <ImageView
            android:id="@+id/iv_controller_play"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="8dp"
            android:src="@drawable/nugu_btn_play_32"/>
        <ImageView
            android:id="@+id/iv_controller_next"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="2dp"
            android:src="@drawable/nugu_btn_skip_next_32"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/iv_controller_random"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/nugu_btn_random_inactive"/>

    </LinearLayout>
    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:padding="4dp"
        android:src="@drawable/ic_main_instagram"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
        android:id="@+id/iv_related_song"
        android:layout_width="48dp"
        android:layout_height="32dp"
        android:src="@drawable/btn_player_related"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:padding="4dp"
        android:src="@drawable/btn_player_go_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    
    
</androidx.constraintlayout.widget.ConstraintLayout>